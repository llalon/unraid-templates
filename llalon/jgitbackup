<?xml version="1.0"?>
<Container version="2">
  <Beta>True</Beta>
  <Category>Backup: Status:Beta</Category>
  <Name>jgitbackup</Name>
  <Repository>docker.io/llalon/jgitbackup</Repository>
  <Registry>https://hub.docker.com/r/llalon/jgitbackup</Registry>
  <Network>bridge</Network>
  <Shell>sh</Shell>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Support>https://github.com/llalon/JGitBackup</Support>
  <Project>https://github.com/llalon/JGitBackup</Project>
  <Overview>Backup git repos from github or gitlab automatically on a schedule.</Overview>
  <WebUI/>
  <TemplateURL>https://raw.githubusercontent.com/llalon/unraid-templates/main/llalon/github-backup.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/llalon/unraid-templates/main/llalon/images/github-backup.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DonateText/>
  <DonateLink/>
  <Requires/>
  <Config Name="Token" Target="JGITBACKUP_TOKEN" Default="1234" Mode="" Description="User API token.&#13;&#10;&#13;&#10;For github: https://github.com/settings/tokens&#13;&#10;for gitlab: https://docs.gitlab.com/ee/user/profile/personal_access_tokens.html" Type="Variable" Display="always" Required="true" Mask="true"></Config>
  <Config Name="Schedule" Target="JGITBACKUP_SCHEDULE" Default="5 * * * * *" Mode="" Description="How often to sync as CRON expression." Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="Provider" Target="JGITBACKUP_PROVIDER" Default="github" Mode="" Description="Acceptable values: 'github', 'gitlab'" Type="Variable" Display="always" Required="true" Mask="false"></Config>
  <Config Name="Username" Target="JGITBACKUP_USERNAME" Default="" Mode="" Description="Username of user for token" Type="Variable" Display="always" Required="true" Mask="false"></Config>
  <Config Name="Data" Target="/git" Default="/mnt/user/backup/" Mode="rw" Description="UnRAID directory for repos data." Type="Path" Display="always" Required="true" Mask="false"></Config>
</Container>
